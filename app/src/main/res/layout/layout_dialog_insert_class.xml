<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="Thêm Lớp Học"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_yellow_coner_topleft_topright"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Hãy nhập đầy đủ thông tin lớp của bạn"
        android:textSize="16dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp:"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/spnInsertClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:minWidth="60dp"
                android:background="@drawable/bg_spinner"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Tên lớp:"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/edtNameInsertClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:hint="Tên lớp"
                android:textSize="18dp"
                android:background="@drawable/bg_textview_gray_border"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mô tả:"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/edtInsertDescription"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textSize="18dp"
            android:background="@drawable/bg_textview_gray_border"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textSize="18dp"
                android:background="@drawable/bg_btn_gray_coner"
                android:onClick="btnCancelClass"/>

            <Button
                android:id="@+id/btnSubmitInsertClass"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Thêm"
                android:textSize="18dp"
                android:background="@drawable/bg_btn_yellow_coner"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>