<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgHSItem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_hsnam"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameHSItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:text="Học sinh 1"
            android:textColor="@color/textColor"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvMaHSItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã số: 2"
            android:textSize="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="60dp"
        android:textColor="@color/green"
        android:text="Có mặt"
        android:textSize="18dp"
        android:background="@color/transparent"/>

    <ImageButton
        android:id="@+id/btnEditTrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_edit"/>
</LinearLayout>