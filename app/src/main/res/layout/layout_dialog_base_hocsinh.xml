<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:text="Thêm Học Sinh"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_yellow_coner_topleft_topright"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Để dễ dàng quản lý học sinh, vui lòng cung cấp đầy đủ thông tin"
        android:textSize="16dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="90dp"
            android:text="Họ và tên:"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edtTenHS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="text"
            android:background="@drawable/bg_textview_gray_border"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="90dp"
                    android:text="Ngày sinh:"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/edtNgaySinhHS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:inputType="date"
                    android:padding="6dp"
                    android:ems="5"
                    android:background="@drawable/bg_textview_gray_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="90dp"
                    android:text="Tôn giáo:"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/edtTonGiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:ems="5"
                    android:layout_marginLeft="10dp"
                    android:inputType="text"
                    android:background="@drawable/bg_textview_gray_border"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <RadioGroup
                android:id="@+id/rdGioiTinhHS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>

                <RadioButton
                    android:id="@+id/rdFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Nữ"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="90dp"
            android:text="Địa chỉ:"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edtDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_marginLeft="10dp"
            android:minEms="10"
            android:inputType="text"
            android:background="@drawable/bg_textview_gray_border"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCloseDialog"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="18dp"
            android:background="@drawable/bg_btn_gray_coner"/>

        <Button
            android:id="@+id/btnSubmitDialogHS"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Thêm"
            android:textSize="18dp"
            android:background="@drawable/bg_btn_yellow_coner"/>
    </LinearLayout>
</LinearLayout>