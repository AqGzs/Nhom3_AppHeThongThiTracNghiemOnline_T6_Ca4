<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imgHSItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_hsnam"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameHSItem"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Phạm Duy Khánh"
            android:textColor="@color/textColor"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvMaHSItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã số: 2"
            android:textSize="14dp"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnInfoHSItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@drawable/ic_view"/>

    <ImageButton
        android:id="@+id/btnEditHSItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_edit"/>

    <ImageButton
        android:id="@+id/btnDeleteHSItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_delete2"/>
</LinearLayout>